<style>

</style>
<div class="container">
  <%= form_for @deteriorating_item do |f| %>
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <%= f.label :name, 'Nombre' %>
            <%= f.text_field :name, class: 'form-control'  %>
          </div>
          <div class="form-group">
            <%= f.label :specification, 'Especificaciones' %>
            <%= f.text_area :specification, class: 'form-control'  %>
          </div>
          <div class="form-group">
            <%= f.label :unit, 'Unidad' %>
            <%= f.text_field :unit, class: 'form-control'  %>
          </div>
          <%= f.submit 'Guaradar', class:'btn btn-primary' %>
        </div>
        <div class="col-md-4">
          <div class="row quantity-expiration">
            <%= f.fields_for :quantities do |quantities_form| %>
                <div class="form-group col-md-6">
                  <%= quantities_form.label :number, 'Cantidad' %>
                  <%= quantities_form.text_field :number, class: 'form-control' %>
                </div>
                <%= quantities_form.fields_for :expiration_dates do |expiration_dates_form| %>
                    <div class="form-group col-md-6">
                      <%= expiration_dates_form.label :date, 'Fecha de vencimiento' %>
                      <%= expiration_dates_form.text_field :date, class: 'form-control datepicker' %>
                    </div>
                <% end %>
            <% end %>
          </div>
        </div>
        <div class="col-md-1">
          <button type="button" class="btn btn-default" aria-label="Left Align">
            <span class=" glyphicon glyphicon-plus" aria-hidden="true"></span>
          </button>
        </div>
      </div>
  <% end  %>
</div>
<script type="text/javascript">
    $(document).ready(function(){
        $('.datepicker').datepicker({
            format: "yyyy/mm/dd",
            language: "es",
            clearBtn: true,
            autoclose: true
        });

    });
</script>